<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DnDDiceRoller.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DnDDiceRoller"
    Shell.TabBarIsVisible="False"
    Shell.FlyoutBehavior="Flyout"
    Title="DnDDiceRoller">

    <FlyoutItem Title="Menu" FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent
        Title="Dice Roller"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
            Title="User Stats"
            ContentTemplate="{DataTemplate local:UserStatsPage}"
            Route="UserStatsPage" />

        <ShellContent
            Title="Quick Reference"
            ContentTemplate="{DataTemplate local:QuickReferencePage}"
            Route="QuickReferencePage" />

    </FlyoutItem>

</Shell>
